            justify-content: space-between;
            margin-bottom: 6px;
        }

        .metric-label {
            color: #475569;
        }

        .metric-value {
            font-weight: 600;
        }

        .metric-good {
            color: #16A34A;
        }

        .metric-warning {
            color: #D97706;
        }

        .metric-critical {
            color: #DC2626;
        }

        .metric-neutral {
            color: #0F172A;
        }

