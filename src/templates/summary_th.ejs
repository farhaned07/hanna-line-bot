            border: 1px solid #BFDBFE;
            border-left: 4px solid #3B82F6;
            border-radius: 6px;
            padding: 12px;
        }

        .ai-summary-header {
            font-size: 9pt;
            font-weight: 600;
            color: #1E40AF;
            margin-bottom: 6px;
        }

        .ai-summary-content {
            font-size: 10pt;
            color: #1E293B;
            font-style: italic;
        }

        /* Trend Badge */
        .trend-badge {
            display: inline-block;
            padding: 2px 8px;
            border-radius: 12px;
            font-size: 9pt;
            font-weight: 600;
        }

        .trend-improving {
            background: #DCFCE7;
            color: #166534;
        }

        .trend-stable {
            background: #E0E7FF;
            color: #3730A3;
        }

        .trend-worsening {
            background: #FEE2E2;
            color: #991B1B;
        }

        /* Footer */
        .footer {
            margin-top: 20px;
            padding-top: 12px;
            border-top: 1px solid #E2E8F0;
            font-size: 8pt;
            color: #64748B;
        }

        .footer-row {
